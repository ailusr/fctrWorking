{
  "manifest_version": 3,
  "name": "fctr services",
  "version": "2.5.0",
  "description": "Fact Check or Source Trace selected text claims using OAuth authentication",
  "key": "",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "modules/modal-styles.js",
        "modules/native-utils.js",
        "modules/utils.js",
        "modules/auth-popup-ui.js",
        "modules/auth-popup-interactions.js", 
        "modules/auth-manager.js",
        "modules/ai-detection-icons.js",
        "modules/results-display.js",
        "modules/results-parsing.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "scripting",
    "contextMenus",
    "downloads",
    "notifications"
  ],
  
  "commands": {
    "fact-check": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Fact-check selected text using fctr"
    }
  },
  
  "host_permissions": [
    "https://usw2.auth.ac/*",
    "https://api.totmailabs.com:5001/*",
    "https://api.totmailabs.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "auth/auth-popup.html",
        "auth/callback.html", 
        "auth/callback.js",
        "auth/auth-popup.js",
        "auth/keycloak-config.js",
        "modules/*.js",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}